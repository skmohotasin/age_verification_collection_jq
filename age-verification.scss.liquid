#modal_screen {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1100;
  background-color: rgba(0, 0, 0, 0.8);

  &.nope {
    background-color: #000;
  }
}

#modal_content {
  position: fixed;
  z-index: 1101;
  margin: 0 auto;
  background-color: {{ settings.age_verification_bg }};
  font-size: 12px;
  width: 290px;
  height: 270px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
  background-position: center 2em;
  background-repeat: no-repeat;
  background-size: 90px auto;
  .content_wrapper {
    margin: 0;
    position: absolute;
    top: 50%;
    width: 100%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    text-align: center;
  }
  h2 {
    color: {{ settings.age_verification_title_color }};
    margin: 0 0 0 0;
    font: caption;
  }
  p {
    color: {{ settings.age_verification_body_color }};
    max-width: 75%;
    margin: 1.2em auto 0;
    font: caption;
    a {
      color: {{ settings.age_verification_link_color }};
    }
  }
  nav {
    font-size: 16px;
    display: table;
    width: 282px;
    ul {
      display: table-row;
      width: 100%;
      margin: 0;
      padding: 0;
    }
    li {
      display: table-cell;
      text-align: right;
      width: auto;
    }
    &:after {
      content: "";
      display: block;
      clear: both;
    }
    small {
      display: block;
      text-align: center;
      color: #888;
      margin: 1em 0 0;
    }
    a.av_btn {
      display: block;
      text-align: center;
      width: 120px;
      border-radius: 23px;
      margin: 1em auto 0;
      text-decoration: none;
      padding: 1em;
      color: #fff;
      font: caption;
      text-transform: none;
      letter-spacing: 0;
    }
    .av_go {
      background-color: {{ settings.age_verification_yes_btn_color }};
      &:hover {
        background-color: {{ settings.age_verification_yes_btn_hover_color }};
      }
    }
    .av_no {
      background-color: {{ settings.age_verification_no_btn_color }};
      &:hover {
        background-color: {{ settings.age_verification_no_btn_hover_color }};
      }
    }
  }
  #modal_regret_wrapper nav a.av_btn {
    margin-top: 0;
    width: 230px;
    font-size: 0.8em;
  }
}

@media (min-width: 688px) {
  #modal_content {
    top: 10em;
    top: 30vh;
    left: 30vw;
    width: 90%;
    max-width: 500px;
    background-position: center 3em;
    background-size: 160px auto;
    font-size: 16px;
    h2 {
      margin: 0 0 0 0;
      font-size: 1.875em;
    }
    p {    
      font-size: 1em;
      line-height: 1.9em;
    }
    nav {
      width: 396px;
      margin: 0 auto;
      a.av_btn {
        padding: 1em 2.5em;
        margin: 1.6em auto 0;
        font-size: 1em;
      }
    }
  }
}
